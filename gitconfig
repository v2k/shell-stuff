[user]
    name = v2k
    email = vince@blackbirdinteractive.com
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color "diff"]
    whitespace = red reverse
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim
# http://help.github.com/line-endings/
# - supposed to set this to true apparently...
#    autocrlf = true
    autocrlf = input

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

[push]
    default = tracking
[diff]
    tool = kdiff3
[merge]
    tool = kdiff3
[mergetool "kdiff3"]
    path = ~/kdiff3.sh
    keepBackup = false
    trustExitCode = false
[guitool "Helpful/Pull All Submodules"]
	cmd = git submodule foreach git pull
[guitool "Destructive/Clean All..."]
	cmd = git clean -f -d
	confirm = yes
[guitool "Destructive/Delete One File..."]
	cmd = rm \"\"
	noconsole = yes
	needsfile = yes
	confirm = yes
[guitool "Destructive/Destroy All Work (Reset and Clean)..."]
	cmd = git reset --hard & git clean -x -f -d
	confirm = yes
[guitool "Destructive/Reset All..."]
	cmd = git reset --hard
	confirm = yes
[guitool "Destructive/Revert One File..."]
	cmd = git checkout \"\"
	noconsole = yes
	needsfile = yes
	confirm = yes
[guitool "Helpful/Pull"]
	cmd = git pull
[guitool "Helpful/Visual Diff"]
	cmd = git difftool --gui \"\"
	noconsole = yes
	needsfile = yes
[guitool "Rebase/Continue"]
	cmd = git rebase --continue
[guitool "Rebase/Skip"]
	cmd = git rebase --skip
	confirm = yes
[guitool "Rebase/Abort"]
	cmd = git rebase --abort
	confirm = yes
[fetch]
	recurseSubmodules = true
